<article class="item {{post_class}}">

    <header class="post-header">
        <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
            {{#if tags}}on {{tags}}{{/if}}</span>
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>

    <div class="post-card">

        <section class="post-featured-image">
            <a href="{{url}}"><span class="aspect-ratio-square rotate-45">
                {{#if feature_image}}
                    <img src="{{img_url feature_image}}" alt="{{title}}" />
                {{else}}{{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{title}}" />
                {{/if}}{{/if}}
            </span></a>
        </section>

        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>

            <div class="read-more">
                <a href="{{url}}">Read more...</a>
            </div>

        </section>

    </div>

</article>